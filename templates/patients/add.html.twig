<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>PATIENTS</title>
  {# <link rel="shortcut icon" href="./img/svg/logo.svg" type="image/x-icon"> #}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">  
  <link rel="stylesheet" href="{{ asset ('css/style2.css') }}">
</head>
<body>
  <div class="layer"></div>
  <a class="skip-link sr-only" href="#skip-target">Skip to content</a>
  <div class="page-flex">
    {{ include('components/aside.html.twig') }}
    <div class="main-wrapper">
      {{ include('components/nav.html.twig') }}
      <!-- ! Main -->
      <main class="main users chart-page" id="skip-target">
        <div class="container p-lg-4">
          <div class="card mw-70 shadow border-0 mb-4 m-lg-1">
            <div class="card-header py-3 d-flex border-0 flex-row align-items-center justify-content-between">
              <h6 class="m-0 fw-bold text-white">NEW PATIENT </h6>
            </div>
            <div class="card-body"> 
                {# {{ form(form) }} #}
                {{ form_start(form) }}
                <div class="row p-3">
                        <div class="col-lg-6 mb-3">
                            <input name="{{ field_name(form.nomPatient) }}" value="{{ field_value(form.nomPatient) }}" placeholder="Last name" class="form-control">
                        </div>
                        <div class="col-lg-6 mb-3">
                            <input name="{{ field_name(form.prenomPatient) }}" value="{{ field_value(form.prenomPatient) }}" placeholder="First name" class="form-control">
                        </div>
                        <div class="col-lg-6 mb-3">
                          <select class="form-control form-control-user" name="{{ field_name(form.genre) }}" required>
                              <option value="" disabled selected >Gender</option>
                                {% for label, value in field_choices(form.genre) %}
                                    <option value="{{ value }}">{{ label }}</option>
                                {% endfor %}
                          </select>                        
                        </div>
                        <div class="col-lg-6 mb-3">
                            <input name="{{ field_name(form.cni) }}" value="{{ field_value(form.cni) }}" placeholder="CNI" class="form-control">
                        </div>
                        <div class="col-lg-6 mb-3">
                            <input name="{{ field_name(form.Telephone) }}" value="{{ field_value(form.Telephone) }}" placeholder="Phone number" class="form-control">
                        </div>
                        <div class="col-lg-6 mb-3">
                            <input name="{{ field_name(form.adresse) }}" value="{{ field_value(form.adresse) }}" placeholder="Address" class="form-control">
                        </div>
                        <div class="col-lg-6 mb-3">
                            <input type="date" name="{{ field_name(form.dateNaissance) }}" value="{{ field_value(form.dateNaissance) }}" class="form-control" >
                        </div>
                        {# <div class="col-lg-6 mb-0">
                          <select class="form-control form-control-user" name="gender" id="gender" required>
                            
                          </select>                          
                        </div> #}
                    </div>
                    <div class="row">
                        <div class="col-lg-6"></div>
                        <div class="col-lg-6 pe-4">
                                <button name="{{ field_name(form.save) }}" class="btn btn-success float-end"><strong>save</strong></button>                        
                        </div>
                    </div>
                  {{ form_end(form) }}
            </div>
          </div>
        </div>
      </main>
        {{ include('components/footer.html.twig') }}
    </div>
  </div>
  <script src="{{ asset('js/chart.min.js') }}"></script>
  <script src=" {{ asset('js/feather.min.js') }}"></script>
  <script src="{{ asset('js/script2.js') }}"></script>
  
</body>
</html>